            CornerRadius="25"
            BackgroundColor="#373b42"
            TextColor="White"
            Margin="0,0,0,0" 
            FontSize="15"
            FontFamily="CaviarDreams.ttf"
             Grid.Row="2"/>  

<Button Text="Apenas o que estiver dentro do foguete."
           BorderColor="White"
           BorderWidth="1"
            HeightRequest="50"
            CornerRadius="25"
