<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lua.PaginadoisPage"
              BackgroundColor="#373b42">


<Grid>
   <Grid.RowDefinitions>    
       <RowDefinition Height="200"/>
       <RowDefinition Height="*"/>
      <RowDefinition Height="50"/>
        <RowDefinition Height="50"/>
   </Grid.RowDefinitions> 



    <Label Text="Você precisará levar suprimentos, quais serão suas escolhas?"
     TextColor="white"
     Margin="25"
     FontSize="25"
     HorizontalOptions="Center"
     FontFamily="FRUITBANANA.otf"
     Grid.Row="0"
      HorizontalTextAlignment="Center"
      VerticalOptions="Center"/> 
     



     <Image Source="dentrodofoguete.jpg"
   Aspect="AspectFill"
   Grid.Row="1"/>



  <Button Text="comida, água, oxigênio extra, trage espacial"
