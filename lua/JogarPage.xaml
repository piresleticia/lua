             x:Class="lua.JogarPage"
             BackgroundColor="#373b42">

<Grid>
   <Grid.RowDefinitions>    
       <RowDefinition Height="200"/>
       <RowDefinition Height="*"/>
      <RowDefinition Height="50"/>
   </Grid.RowDefinitions> 





    <Label Text="Olá você está indo para uma viagem espacial. Está preparado?"
